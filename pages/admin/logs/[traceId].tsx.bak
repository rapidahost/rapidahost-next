import { useRouter } from 'next/router';
import useSWR from 'swr';
import Link from 'next/link';

const fetcher = (url: string) => fetch(url).then(res => res.json());

export default function TraceLogDetailPage() {
  const router = useRouter();
  const { traceId } = router.query;

  const { data, error } = useSWR(traceId ? `/api/logs/trace/${traceId}` : null, fetcher);

  if (error) return <div className="p-4 text-red-600">Failed to load log</div>;
  if (!data) return <div className="p-4">Loading...</div>;

  const { log } = data;

  return (
    <div className="p-6 max-w-4xl mx-auto space-y-6">
      <h1 className="text-xl font-semibold">Log Detail: {traceId}</h1>

      <div className="bg-white border rounded p-4 text-sm">
        <p><strong>Status:</strong> {log.status}</p>
        <p><strong>Type:</strong> {log.type}</p>
        <p><strong>Client ID:</strong> <Link href={`/admin/client/${log.clientId}`} className="text-blue-600 underline">{log.clientId}</Link></p>
        <p><strong>Invoice ID:</strong> <Link href={`/admin/invoice/${log.invoiceId}`} className="text-blue-600 underline">{log.invoiceId}</Link></p>
        <p><strong>Service ID:</strong> {log.serviceId}</p>
        <p><strong>Payment Method:</strong> {log.paymentMethod}</p>
        <p><strong>Created:</strong> {new Date(log.timestamp).toLocaleString()}</p>
        <p><strong>Retry Count:</strong> {log.retryCount}</p>
        <p><strong>Message:</strong> {log.message || '-'}</p>
        <p><strong>Error:</strong> <span className="text-red-600">{log.error || '-'}</span></p>
      </div>

      {log.status !== 'success' && (
        <button
          className="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded"
          onClick={async () => {
            const res = await fetch(`/api/logs/retry`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ traceId })
            });
            if (res.ok) alert('Retry requested');
            else alert('Retry failed');
          }}
        >
          Retry
        </button>
      )}
    </div>
  );
}
